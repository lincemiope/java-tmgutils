<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uodreams.tmgutils.myRequestsActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="80"
        android:background="@color/pal_IV">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:id="@+id/tvDisplayID"
            android:text="@string/myrequests_title_label"
            android:paddingTop="@dimen/activity_title_vertical_margin"
            android:paddingBottom="@dimen/activity_title_vertical_margin"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/pal_II"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lvMyRequests"
            android:background="@color/pal_V"/>
    </LinearLayout>
</LinearLayout>
